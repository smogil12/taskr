{
  "name": "tail-ai",
  "version": "1.0.0",
  "description": "Modern time management and project tracking application with AI-powered insights",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:staging": "NODE_ENV=staging npm run dev:backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "docker:up": "cd infrastructure && docker-compose up -d",
    "docker:up:staging": "cd infrastructure && docker-compose --profile staging up -d",
    "docker:down": "cd infrastructure && docker-compose down",
    "docker:down:staging": "cd infrastructure && docker-compose --profile staging down",
    "docker:build": "cd infrastructure && docker-compose build",
    "setup": "npm run setup:db && npm run setup:env",
    "setup:db": "cd infrastructure && docker-compose up -d postgres",
    "setup:db:staging": "cd infrastructure && docker-compose --profile staging up -d postgres-staging",
    "setup:env": "cp backend/.env.example backend/.env",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:migrate:staging": "cd backend && NODE_ENV=staging npm run db:migrate",
    "db:migrate:prod": "cd backend && NODE_ENV=production npm run db:migrate",
    "db:generate": "cd backend && npm run db:generate",
    "db:studio": "cd backend && npm run db:studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "time-tracking",
    "project-management",
    "ai",
    "productivity",
    "typescript",
    "nextjs",
    "nodejs"
  ],
  "author": "Spencer Mogil",
  "license": "MIT"
}
