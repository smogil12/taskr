# =============================================================================
# TAIL.AI ENVIRONMENT CONFIGURATION
# =============================================================================

# Application
NODE_ENV=development
APP_NAME=Tail.AI
APP_VERSION=1.0.0
PORT=3000

# Frontend Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000

# Backend Configuration
BACKEND_PORT=4000
BACKEND_HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://tail_ai_user:tail_ai_password@localhost:5432/tail_ai_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=tail_ai_dev
DATABASE_USER=tail_ai_user
DATABASE_PASSWORD=tail_ai_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here
JWT_SECRET=your-jwt-secret-key-here

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration
EMAIL_SERVER_HOST=localhost
EMAIL_SERVER_PORT=1025
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=
EMAIL_FROM=noreply@tail.ai

# Resend Email Service (Production)
RESEND_API_KEY=your-resend-api-key

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# File Storage (MinIO/S3)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=tail-ai-files
MINIO_USE_SSL=false

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_STRIPE_PAYMENTS=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=true

# Development
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true
LOG_LEVEL=debug
